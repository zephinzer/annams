    "stop-services": "./provisioning/scripts/stop-services.sh",
    "test": "mocha .",
    "test-lint": "eslint .",
    "test-sec": "nsp check .",
    "version-patch-bump": "docker run -v \"$(pwd):/app\" zephinzer/vtscripts:latest iterate patch -q",
